<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.zhengdong.base.Section.Second.Controller.BoutiqueDetailAC">

    <RelativeLayout
        android:id="@+id/online_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ScrollView
            android:id="@+id/head_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/ten_dp">

                    <com.example.zhengdong.base.Section.First.View.RecyclerBanner
                        android:id="@+id/header_pic"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="200dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                    <ImageView
                        android:id="@+id/pic_header"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/placerholder"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F6F6"
                    android:visibility="gone">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/comment_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/fifteen_dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.example.zhengdong.base.Section.Five.View.CircleImageView
                                android:id="@+id/mine_header_pic"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_alignParentLeft="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placerholder"
                                app:border_color="@color/white"
                                app:border_width="@dimen/zero_dp" />

                            <TextView
                                android:id="@+id/name_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:text=""
                                android:textColor="#FF000000"
                                android:textSize="@dimen/fourteen_sp" />

                        </LinearLayout>
                        <Button
                            android:layout_width="@dimen/sixty_dp"
                            android:layout_height="@dimen/twenty_four_dp"
                            android:textColor="@color/skyblue"
                            android:text="使用"
                            android:textSize="@dimen/twenty_sp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/table_shape_blue_line_bg_six"/>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/title_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:text=""
                        android:textColor="#FF000000"
                        android:textSize="@dimen/eighteen_sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#FF666666"
                            android:textSize="@dimen/twenty_sp" />

                        <TextView
                            android:id="@+id/use_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:text=""
                            android:textColor="#FF666666"
                            android:textSize="@dimen/twenty_sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:src="@drawable/icon_fab" />

                        <TextView
                            android:id="@+id/raise_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#FF666666"
                            android:textSize="@dimen/twenty_sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:src="@drawable/icon_com" />

                        <TextView
                            android:id="@+id/comment_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dpp"
                            android:text=""
                            android:textColor="#FF666666"
                            android:textSize="@dimen/twenty_sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/two_dp"
                            android:layout_height="match_parent"
                            android:background="#FFD8D8D8" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/material_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/fifteen_dp"
                                    android:text=""
                                    android:textColor="#FF666666"
                                    android:textSize="@dimen/fourteen_sp" />

                                <TextView
                                    android:id="@+id/height_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/twenty_dp"
                                    android:text=""
                                    android:textColor="#FF666666"
                                    android:textSize="@dimen/fourteen_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/color_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/fifteen_dp"
                                    android:layout_marginTop="@dimen/ten_dp"
                                    android:text=""
                                    android:textColor="#FF666666"
                                    android:textSize="@dimen/fourteen_sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/ten_dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/length_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/fifteen_dp"
                                    android:text=""
                                    android:textColor="#FF666666"
                                    android:textSize="@dimen/fourteen_sp" />

                                <TextView
                                    android:id="@+id/width_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/twenty_dp"
                                    android:text=""
                                    android:textColor="#FF666666"
                                    android:textSize="@dimen/fourteen_sp" />

                                <TextView
                                    android:id="@+id/total_sum_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/twenty_dp"
                                    android:text=""
                                    android:textColor="#FF666666"
                                    android:textSize="@dimen/fourteen_sp" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/descript_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:text=""
                        android:textColor="#FF000000"
                        android:textSize="@dimen/fourteen_sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/four_eight"
            android:layout_height="@dimen/four_eight"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon__in_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="@dimen/four_eight"
            android:layout_height="@dimen/four_eight"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_in_more" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/four_eight"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/ninety_dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/table_shape_gray_bg">

                <ImageView
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:src="@drawable/icon_speak" />

                <EditText
                    android:id="@+id/edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/write"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:hint="  我有话说"
                    android:textCursorDrawable="@drawable/curse_bg"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#666666"
                    android:textSize="@dimen/fiften_sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/comment_list_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="53dp"
                android:src="@drawable/shape_msg" />

            <ImageView
                android:id="@+id/raise_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:background="@drawable/icon_tab_fab" />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/no_net_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/off_line_view"/>
    </LinearLayout>

</RelativeLayout>
