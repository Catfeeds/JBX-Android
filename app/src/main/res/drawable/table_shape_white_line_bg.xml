<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="@color/white" />

    //设置边距
    <padding
        android:bottom="@dimen/zero_dp"
        android:left="@dimen/zero_dp"
        android:right="@dimen/zero_dp"
        android:top="@dimen/zero_dp" />

    //控制边界线颜色和笔触大小
    <stroke
        android:width="@dimen/one_dp"
        android:color="@color/white" />

    //控制界面颜色渐变（你这个用不到）
    <gradient
        android:startColor="@color/white"
        android:endColor="@color/white"
        android:type="linear"
        android:angle="90"/>

    //控制圆角大小
    <corners android:radius="@dimen/threeteen_dp" />

</shape>