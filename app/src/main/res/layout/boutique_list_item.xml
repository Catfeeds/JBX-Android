<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/card_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dp"
        android:background="@drawable/ripple_bg"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.zhengdong.base.Section.Five.View.CircleImageView
                    android:id="@+id/header_pic"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentLeft="true"
                    app:border_width="@dimen/zero_dp"
                    app:border_color="@color/white"
                    android:src="@drawable/placerholder"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/name_txt"
                    android:layout_toRightOf="@+id/header_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/five_dpp"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/eleven_sp"
                    />
                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#FF666666"
                    android:textSize="9sp"
                    />
            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="#E9E9E9">
            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

        </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ten_sp"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/flag_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="#热门"
                        android:textColor="@color/skyblue"
                        android:background="@drawable/table_shape_blue_line_bg_six"
                        android:paddingLeft="@dimen/five_dpp"
                        android:paddingRight="@dimen/five_dpp"
                        android:paddingTop="@dimen/two_dp"
                        android:paddingBottom="@dimen/two_dp"
                        android:textSize="9sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="#最新"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:textColor="@color/skyblue"
                        android:background="@drawable/table_shape_blue_line_bg_six"
                        android:paddingLeft="@dimen/five_dpp"
                        android:paddingRight="@dimen/five_dpp"
                        android:paddingTop="@dimen/two_dp"
                        android:paddingBottom="@dimen/two_dp"
                        android:textSize="9sp"/>
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>


</LinearLayout>