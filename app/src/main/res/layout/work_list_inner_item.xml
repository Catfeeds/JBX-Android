<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/six_nine_dp"
    android:layout_height="@dimen/six_nine_dp"
    android:id="@+id/item_view"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:id="@+id/first_pic"
            android:layout_width="@dimen/twenty_two_dp"
            android:layout_height="@dimen/twenty_two_dp"/>
        <TextView
            android:id="@+id/first_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/seventeen_dp"
            android:text=""
            android:textColor="@color/text_gray_color"
            android:layout_marginTop="@dimen/eight_dp"
            android:textSize="@dimen/twenty_sp" />
    </LinearLayout>

</RelativeLayout>