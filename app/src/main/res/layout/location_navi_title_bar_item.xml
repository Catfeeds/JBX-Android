<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navi_back_blue_color">

        <LinearLayout
            android:id="@+id/navi_back_lay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/four_eight"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/ten_dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/location_pic"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ad_loc"/>
            <TextView
                android:id="@+id/location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dpp"
                android:textColor="@color/white"
                android:textSize="@dimen/fiften_sp"
                android:text=""/>
            <ImageView
                android:id="@+id/location_more_pic"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ad_xl"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navi_title_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/navi_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/seventeen_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navi_right_lay"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/four_eight"
            android:layout_marginRight="@dimen/ten_dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/navi_right_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/fiften_sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navi_right_pic_lay"
            android:orientation="horizontal"
            android:layout_width="@dimen/four_eight"
            android:layout_height="@dimen/four_eight"
            android:visibility="gone"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/right_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_ad_switch"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navi_location_lay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/four_eight"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginRight="@dimen/ten_dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/right_location_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ad_loc"/>
            <TextView
                android:id="@+id/right_location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dpp"
                android:textColor="@color/white"
                android:textSize="@dimen/fiften_sp"
                android:text="城市定位"/>
            <ImageView
                android:id="@+id/right_location_more_pic"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ad_xl"/>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>