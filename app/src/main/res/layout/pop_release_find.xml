<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/pop_release_lay"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/ripple_bg"
                    android:padding="@dimen/ten_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/threeteen_dp"
                        android:layout_height="@dimen/threeteen_dp"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:background="@drawable/find_sel_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试一"
                        android:textColor="@color/skyblue"
                        android:textSize="@dimen/fiften_sp"
                        android:layout_marginLeft="@dimen/eight_dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:background="@color/gray_40"/>
                <LinearLayout
                    android:id="@+id/pop_upload_lay"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/ripple_bg"
                    android:padding="@dimen/ten_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/threeteen_dp"
                        android:layout_height="@dimen/threeteen_dp"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:background="@drawable/shop_sel_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试二"
                        android:textColor="@color/skyblue"
                        android:textSize="@dimen/fiften_sp"
                        android:layout_marginLeft="@dimen/eight_dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:background="@color/gray_40"/>
                <LinearLayout
                    android:id="@+id/pop_download_lay"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/ripple_bg"
                    android:padding="@dimen/ten_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/threeteen_dp"
                        android:layout_height="@dimen/threeteen_dp"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:background="@drawable/icon_job"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试三"
                        android:textColor="@color/skyblue"
                        android:textSize="@dimen/fiften_sp"
                        android:layout_marginLeft="@dimen/eight_dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>