<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/ten_dp"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:paddingTop="@dimen/ten_dp">

            <ImageView
                android:layout_width="@dimen/twenty_four_dp"
                android:layout_height="@dimen/twenty_four_dp"
                android:src="@drawable/placerholder" />

            <TextView
                android:id="@+id/company_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:text=""
                android:textColor="#FF000000"
                android:textSize="@dimen/sixteen_sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="#FFD8D8D8" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/sixteen_dp"
            android:paddingBottom="@dimen/ten_dp"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingTop="@dimen/ten_dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/order_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FF000000"
                    android:textSize="@dimen/fourteen_sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总金额(元)："
                        android:textColor="#FF000000"
                        android:textSize="@dimen/fourteen_sp"
                        />
                    <TextView
                        android:id="@+id/total_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#0076FF"
                        android:textSize="@dimen/fourteen_sp"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/remark_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text=""
                    android:textColor="#FF666666"
                    android:textSize="@dimen/fourteen_sp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/tran_btn"
                android:layout_width="@dimen/eight_ten_dp"
                android:layout_height="@dimen/threety_two_dp"
                android:layout_marginTop="@dimen/five_dpp"
                android:layout_alignParentRight="true"
                android:text="转订货单"
                android:textSize="@dimen/fourteen_sp"
                android:textColor="@color/white"
                android:background="@drawable/table_shape_button_radio_eight"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ten_dp"
            android:background="#FFECEEF1" />
    </LinearLayout>


</LinearLayout>