<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ripple_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:weightSum="7"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/four_four_dp"
                    android:text=""
                    android:textColor="#FF222222"
                    android:maxLines="2"
                    android:textSize="@dimen/fiften_sp" />
                <TextView
                    android:id="@+id/sub_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:text=""
                    android:textColor="#FF828282"
                    android:textSize="@dimen/threeteen_sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/right_pic"
                android:layout_width="@dimen/zero_dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/placerholder"
                android:layout_height="@dimen/ninety_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:background="@drawable/table_shape_lightgray_line_bg_six"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="#D8D8D8"/>

    </LinearLayout>


</LinearLayout>