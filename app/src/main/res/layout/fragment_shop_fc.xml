<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhengdong.base.Section.Shop.Controller.ShopFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/four_eight"
            android:background="@color/navi_back_blue_color">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/four_eight"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/four_four_dp">

                <EditText
                    android:id="@+id/shop_search_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/table_shape_white_bg"
                    android:cursorVisible="true"
                    android:hint="@string/search_shop"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/thirty_dp"
                    android:textColorHint="#FF828282"
                    android:textCursorDrawable="@drawable/curse_bg"
                    android:textSize="@dimen/fourteen_sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_nav_search" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/shop_navi_cart_lay"
                android:layout_width="@dimen/four_four_dp"
                android:layout_height="@dimen/four_four_dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:id="@+id/shop_navi_cart_img"
                    android:layout_width="@dimen/twenty_two_dp"
                    android:layout_height="@dimen/twenty_two_dp"
                    android:src="@drawable/shop_nav_cart" />
            </LinearLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/shop_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


    </LinearLayout>


</FrameLayout>
